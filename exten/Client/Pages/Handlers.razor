@attribute [Authorize]
@page "/handlers"

@using Client.Components.Handlers

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="HTTP(S)">
            <MudGrid>
                <MudItem xs="12">
                    <HttpHandlers />
                </MudItem>
                <MudItem xs="12" Class="pt-8">
                    <HostedFiles />
                </MudItem>
            </MudGrid>
        </MudTabPanel>

        <MudTabPanel Text="SMB">
            <SmbHandlers />
        </MudTabPanel>

        <MudTabPanel Text="TCP">
            <TcpHandlers />
        </MudTabPanel>

        <MudTabPanel Text="EXTERNAL">
            <ExtHandlers />
        </MudTabPanel>
    </MudTabs>
</MudContainer>